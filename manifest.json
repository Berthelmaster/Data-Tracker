{
    "manifest_version": 2,
    "name": "Data Tracker",
    "description": "Data Tracker for Google Chrome - Track who sees your data",
    "version": "1.0.0",
    "icons": {"128": "icon_128.png"},
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/js-cookie@beta/dist/js.cookie.min.js; object-src 'self'",
    "permissions": [
        "activeTab", 
        "cookies", 
        "https://cdn.jsdelivr.net/npm/js-cookie@beta/dist/js.cookie.min.js", 
        "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css",
        "<all_urls>"]

}